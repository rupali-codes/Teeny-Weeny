<!DOCTYPE html>
<html>
<head>
    <%- include('partials/meta.ejs') %>
	<title>Dashboard</title>
</head>
<body>
	<nav class="p-4 navbar navbar-expand-md navbar-light">
        <div class="container">
            <a class="navbar-brand h1">Teeny-Weeny</a>
            <button class="navbar-toggler" type="button" data-bs-toggle='collapse' data-bs-target='#navmenu'>
                    <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse text-center rounded container " id="navmenu">
                <div class="navbar-nav ms-auto ">
                    <form class="nav-item p-3 p-md-0" method="POST" action="/logout">
                        <button class="btn rounded-pill nav-item text border px-3 py-1 mx-2" type="submit">Logout</button>
                    </form>                 
                </div>

            </div>
        </div>
    </nav>

    <!-- links -->
    <section class=" pt-3 mb-4" id="shortLink">
    	<h1 class="text-center fs-2">Welcome, <%- name%> :)</h1>
        <div class="container">
            <div class=" p-5" id="input-field">
                <form class=" d-flex input-parent m-auto" style="flex-wrap: wrap;" >
                    <input type="text" class="p-2 rounded col-md-9 col-12" id="input" placeholder="Shorten a link here" name="originallink">
                    <button class="btn mt-2 mt-md-0 ms-md-5 ms-0 rounded col-md-2 col-12" id="shorten" type="submit">Shorten it</button>
                </form>
                <div id="err" class="hidden">ERRR</div>
            </div>
        </div>
    </section>


    <section class="list hidden py-5 mt-5 bg-white">
        <div class="d-flex justify-content-between container mt-3 p-3">
            <h2 class="text-center text-decoration-underline fs-4">YOUR LINKS</h2>

            <div class="searchBar">
                <input type="text" name="searchInput" id="searchInput" placeholder="'search'" class="mx-3 px-3 border-0 border-bottom form-control">
                <!-- <button class="btn-sm " id="searchBtn">Search</button> -->
            </div>
        </div>
        <div class="container" id="history">
           
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js " integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p " crossorigin="anonymous "></script>
    <script src="script.js"></script>

</body>
</html>